<div id="question_<%= question.id %>" class="bg-white shadow-md rounded-lg p-6 mb-4">
  <h2 class="text-xl font-semibold mb-4"><%= question.body %></h2>

  <div class="space-y-2 mb-4">
    <% question.choices.each do |choice| %>
      <% if choice == selected_choice %>
        <% if choice.correct %>
          <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-2 rounded flex items-center justify-between">
            <span><%= choice.body %></span>
            <span class="font-bold">✅ Correct!</span>
          </div>
        <% else %>
          <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-2 rounded flex items-center justify-between">
            <span><%= choice.body %></span>
            <span class="font-bold">❌ Incorrect!</span>
          </div>
        <% end %>
      <% elsif choice.correct %>
        <div class="bg-green-50 border border-green-200 text-green-800 px-4 py-2 rounded flex items-center justify-between">
          <span><%= choice.body %></span>
          <span class="font-bold">Correct Answer</span>
        </div>
      <% else %>
        <div class="bg-gray-50 border border-gray-200 text-gray-700 px-4 py-2 rounded">
          <%= choice.body %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="bg-blue-50 p-4 rounded-md mb-4">
    <h3 class="font-semibold text-blue-800 mb-2">Explanation:</h3>
    <p class="text-blue-700"><%= question.explanation %></p>
  </div>

  <%# 「次の問題へ」または「結果を見る」ボタンは後で実装 %>
</div>
