<div class="bg-white shadow-md rounded-lg p-6">
  <h1 class="text-3xl font-bold mb-4"><%= @quiz.title %></h1>
  <p class="text-gray-700 mb-4"><%= @quiz.description %></p>

  <div class="mb-4">
    <span class="text-sm text-gray-500">Created by <%= @quiz.user.email %></span>
    <% if @quiz.public %>
      <span class="bg-green-100 text-green-800 text-xs font-medium px-2.5 py-0.5 rounded-full ml-2">Public</span>
    <% else %>
      <span class="bg-yellow-100 text-yellow-800 text-xs font-medium px-2.5 py-0.5 rounded-full ml-2">Private</span>
    <% end %>
  </div>

  </div>

  <h2 class="text-2xl font-bold mt-8 mb-4">Questions</h2>
  <div id="questions">
    <% @quiz.questions.order(:position).each do |question| %>
      <%= render "questions/question", question: question %>
    <% end %>
  </div>

  <div class="flex space-x-2 mt-8">
    <%= link_to "Edit", edit_quiz_path(@quiz), class: "bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded" %>
    <%= button_to "Destroy", @quiz, method: :delete, data: { confirm: 'Are you sure?' }, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
    <%= link_to "Back to Quizzes", quizzes_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
</div>