<h1 class="text-2xl font-bold mb-4">Quizzes</h1>

<%= link_to "New Quiz", new_quiz_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mb-4 inline-block" %>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
  <% @quizzes.each do |quiz| %>
    <div class="bg-white shadow-md rounded-lg p-6">
      <h2 class="text-xl font-semibold mb-2"><%= link_to quiz.title, quiz %></h2>
      <p class="text-gray-600 mb-4"><%= truncate(quiz.description, length: 100) %></p>
      <div class="flex justify-between items-center">
        <span class="text-sm text-gray-500">Created by <%= quiz.user.email %></span>
        <% if quiz.public %>
          <span class="bg-green-100 text-green-800 text-xs font-medium px-2.5 py-0.5 rounded-full">Public</span>
        <% else %>
          <span class="bg-yellow-100 text-yellow-800 text-xs font-medium px-2.5 py-0.5 rounded-full">Private</span>
        <% end %>
      </div>
    </div>
  <% end %>
</div>